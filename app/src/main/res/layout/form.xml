<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/stepperlayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/appBarLayout"
        android:background="@android:color/white"
        android:elevation="5dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switchControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Progress/Dots" />
    </LinearLayout>

<!--
    <ScrollView
        android:id="@+id/mobilescroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appBarLayout"
        android:layout_above="@+id/llNavigationControls"
        android:background="#E7E7E7"
        android:fillViewport="true">
-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appBarLayout"
            android:layout_above="@+id/llNavigationControls"
            android:background="#E7E7E7">

            <formstepper.CustomViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
<!--    </ScrollView>-->

    <LinearLayout
        android:id="@+id/llNavigationControls"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:layout_marginStart="16sp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/stepper_left"
            android:drawableStart="@drawable/stepper_left"
            android:paddingEnd="10sp"
            android:paddingLeft="0sp"
            android:paddingRight="10sp"
            android:paddingStart="0sp"
            android:text="Back"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp" />

        <ProgressBar
            android:id="@+id/stepperprogressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:indeterminate="false"
            android:max="100"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:progress="100"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/viewPagerIndicator"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingLeft="20sp"
            android:paddingRight="20sp">

            <LinearLayout
                android:id="@+id/viewPagerCountDots"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="horizontal" />
        </RelativeLayout>

        <Button
            android:id="@+id/next"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16sp"
            android:layout_marginRight="16sp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableEnd="@drawable/stepper_right"
            android:drawableRight="@drawable/stepper_right"
            android:paddingEnd="0sp"
            android:paddingLeft="5sp"
            android:paddingRight="0sp"
            android:paddingStart="10sp"
            android:text="Next"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp" />
    </LinearLayout>

