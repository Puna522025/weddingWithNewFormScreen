<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlCenterLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tvInvited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="You just got Invited !!"
            android:textColor="@color/BlackToolBar"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@+id/tvInvited"
            android:layout_centerHorizontal="true"
            android:max="500"
            android:progress="0"
            android:progressDrawable="@drawable/circular"
            tools:progress="500" />

        <Button
            android:id="@+id/btnGetInvite"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_below="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="5dp"
            android:alpha="0.6"
            android:background="@drawable/buttonshape"
            android:text="Get Invite"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:typeface="monospace" />

        <ImageView
            android:id="@+id/imageViewClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:rotation="180"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="@color/BlackToolBar" />

        <TextView
            android:id="@+id/tvUniqueCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInvited"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:textColor="@color/colorRed"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="SP4567"

            />
    </RelativeLayout>
</RelativeLayout>
